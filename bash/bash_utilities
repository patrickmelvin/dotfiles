# Open latest migration file
last_migration() {
  vim db/migrate/$(ls db/migrate/ | sort | tail -1)
}

nth_migration() {
  vim db/migrate/$(ls db/migrate/ | sort | tail -$1)
}

find_task() {
  bundle exec rake -T | grep $1
}

run_modified_specs() {
  bundle exec rspec $(git status -s | grep _spec.rb | cut -b 3-) --tag integration
}
